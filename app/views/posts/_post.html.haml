.posts-wrapper
  .post
    .post-head
      .thumb-img
      .user-name
        = link_to post.user.user_name, profile_path(post.user.user_name)
    %p.skill
      =post.skill
    .reccomend
      = link_to '', like_post_path(post.id), remote: true, id: "like_#{post.id}", class: "glyphicon glyphicon-plus"
    .post-bottom
      = render 'posts/likes', post: post